
<div class='container'>
  <h1>New Game</h1>
  <div class="letters">
    <% @letters.each do |letter| %>
      <h2><%= letter.capitalize %></h2>
    <% end %>
  </div>

  <form action="/score" method="post" data-turbo="false">
    <label for="word">What is the longest word you can find ?</label>
    <%= hidden_field_tag :letters, @letters %>
    <input type="text" name="word" id="input_user" value="<%= params[:word]%>">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type="submit" value="Play!">
  </form>
</div>
